<h1>Welcome to AngularJS!</h1>

<div ng-app="app">
  {{ 1 + 1 + 1}}

  <div ng-controller="taskCtrl">
  
    <h4>Edit line above</h4>
    <input ng-model="rake"> 
    
    <ul>
      <li ng-repeat="task in tasks"> {{ task }}<input ng-model="task"></li>
    </ul>

    <h4>Add a task</h4>
    <input ng-model="addTask">
    <button ng-click="addTask(newTask)">Add Task</button>

  </div>
</div>
