<h1>Welcome to AngularJS!</h1>

<div ng-app="app">
  {{ 1 + 1 + 1}}

  <div ng-controller="taskCtrl">
    
    <ul> 
      <li ng-repeat="task in tasks"
      ng-click="toggleComplete(task)" ng-class="{completed : task.completed}"> {{ task.task }}</li>
    </ul>

    <h4>Add a task</h4>
    <input ng-model="newTask">
    <button ng-click="addTask(newTask)">Add Task</button>



    <h4>Delete a task</h4>
    <input ng-model="deleteTask">
    <button ng-click="">Delete Task</button>

  </div>
</div>
